# בוט התמימים הפיראטים - קובץ הגדרות סביבה
# העתק קובץ זה ל-.env ועדכן את הערכים

# ========================= הגדרות בוט =========================
BOT_TOKEN=YOUR_BOT_TOKEN_FROM_BOTFATHER
MAIN_GROUP_ID=-1002231406288
LOG_CHANNEL_ID=-1003008192507
ADMIN_IDS=6039349310,6562280181,1667741867

# ========================= הגדרות מסד נתונים =========================
USE_DATABASE=true
DB_HOST=pirate-mysql
DB_PORT=3306
DB_NAME=pirate_content
DB_USER=pirate_user
DB_PASSWORD=your_secure_password_here
DB_ROOT_PASSWORD=your_root_password_here

# Pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=5
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ========================= הגדרות Cache =========================
CACHE_TYPE=redis
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_MEMORY=100

# Redis settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ========================= הגדרות Background Tasks =========================
BACKGROUND_TASKS_ENABLED=true
CLEANUP_INTERVAL=3600
STATS_UPDATE_INTERVAL=300
NOTIFICATION_CHECK_INTERVAL=60

# ========================= הגדרות זיהוי ותגובות =========================
DUPLICATE_THRESHOLD=0.85
FUZZY_THRESHOLD=0.8
AUTO_RESPONSE_CONFIDENCE=0.7

# ========================= הגדרות Rate Limiting =========================
REQUESTS_PER_MINUTE=10
REQUESTS_PER_HOUR=50
REQUESTS_PER_DAY=100
REQUEST_COOLDOWN=60

# ========================= הגדרות אבטחה =========================
MAX_MESSAGE_LENGTH=2000
SECURITY_ENABLED=true
SPAM_DETECTION=true

# ========================= הגדרות Logging =========================
DEBUG=false
LOG_LEVEL=INFO
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ========================= הגדרות התראות =========================
NOTIFICATION_THROTTLE=60
MAX_NOTIFICATIONS_PER_HOUR=20
ESCALATION_TIME_HOURS=24

# ========================= הגדרות Docker/K8s =========================
CONTAINER_PORT=8080
HEALTH_CHECK_INTERVAL=30

# ========================= הגדרות Monitoring =========================
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
GRAFANA_PASSWORD=admin

# ========================= הגדרות אופציונליות =========================
WEBHOOK_URL=
EMAIL_NOTIFICATIONS=false
EMAIL_PASSWORD=
API_KEYS=